generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Email {
  id           Int      @id @default(autoincrement())
  senderEmail  String
  toEmail      String
  subject      String
  body         String
  scheduledAt  DateTime
  status       String
  createdAt    DateTime @default(now())
  sentAt       DateTime?
  errorMessage String?
}
